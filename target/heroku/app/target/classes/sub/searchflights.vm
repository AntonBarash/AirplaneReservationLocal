<h2>Search and book for current flights</h2>

 <form method="post" action="/adminviewflights">
   <label for="destination">Enter a destination:</label>
   <input type="destination" name="destination" required/><br>
   <input type="submit" value="Search" />
 </form>
 <br>
 
<ul>
  #foreach($flight in $flights)
    <li>
      <h4>From $flight[0] to $flight[1]</h4><br>
      <h4>Departure day: $flight[2]</h4><br>
      <h4>Departure time: $flight[3]</h4><br>
      <h4>Estimated arrival time: $flight[4]</h4><br>
      <h4>Seat Number: $flight[5]</h4><br>
      <h4>Price: $flight[6]</h4><br>
      <form method="post" action="/bookflight">
        <label for="fid"></label>
        <input type="hidden" name="fid" value=$flight[7] />
	<input type="submit" value="Book this flight" />
        <br>
      </form>
      #end
    </li>
  #end
</ul>

<p>Back to <a href='/customer'>homepage</a></p>
